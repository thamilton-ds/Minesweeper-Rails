<div class="w-full text-3xl">
  <div>
    <p class="text-6xl text-center mb-20"> <%= @board.name %></p>	

    <p class="mb-10"> Created User:     <%= @board.user.email %></p>
    <p class="mb-10"> Created At:   <%= @board.created_at %></p>
    <p class="mb-10"> Width:   <%= @board.width %></p>
    <p class="mb-10"> Height:   <%= @board.height %></p>
    <p class="mb-10"> Number of Mines:   <%= @board.mine %></p>
  </div>

  <%= button_to "Generate Board", board_path(@board), method: :post, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded px-10 mb-10" %>
</div>